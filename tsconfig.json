{
    "exclude": [
        "build",
        "node_modules",
        ".npm",
        "prisma",
    ],
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2017.object"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": { 
            "@validators": ["./src/validators/*"],
            "@services": ["./src/services/*"],
            "@utils": ["./src/utils/*"],
            "@models": ["./src/models/*"],
            "@lib": ["./src/lib/*"],
            "@jobs": ["./src/jobs/*"],
            "@config": ["./src/config/*"],
            "@player": ["./src/player/*"],
        }
    }
}