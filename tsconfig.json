{
    "exclude": [
        "build",
        "node_modules",
        ".npm",
        "prisma",
    ],
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false
    }
}